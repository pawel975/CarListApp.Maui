<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarListApp.Maui.Views.CarDetailsPage"
             xmlns:viewmodel="clr-namespace:CarListApp.Maui.ViewModels"
             Title="{Binding Car.Make}"
             x:DataType="viewmodel:CarDetailsViewModel">
    <VerticalStackLayout>

        <Label 
            Text="{Binding Car.Make}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="Medium"/>
        <Label 
            Text="{Binding Car.Model}"
            VerticalOptions="Center" 
            HorizontalOptions="Center"           
            FontSize="Medium"/>
        <Label 
            Text="{Binding Car.Vin}"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="Medium"/>
    </VerticalStackLayout>
</ContentPage>